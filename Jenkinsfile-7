 pipeline {
  agent {
    label 'linux'
  }
  environment {
    IMAGE_NAME='darinpope/java-web-app'
    IMAGE_VERSION='latest'
    TRIVY_VERSION='0.51.2'
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build container image') {
      steps {
        sh 'docker build -t $IMAGE_NAME:$IMAGE_VERSION .'
      }
    }
    stage('Trivy scan for image misconfiguration show MEDIUM,HIGH,CRITICAL') {
      steps {
        script {
          sh("docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:$TRIVY_VERSION --quiet image --no-progress --exit-code 0 --scanners misconfig,secret --image-config-scanners misconfig,secret --severity MEDIUM,HIGH,CRITICAL $IMAGE_NAME:$IMAGE_VERSION")
        }
      }
    }
    stage('Trivy scan for image misconfiguration exit on HIGH,CRITICAL') {
      steps {
        script {
          def trivyStatus = sh(returnStatus: true, script: "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:$TRIVY_VERSION --quiet image --no-progress --exit-code 1 --scanners misconfig,secret --image-config-scanners misconfig,secret --severity HIGH,CRITICAL $IMAGE_NAME:$IMAGE_VERSION")
          if ( trivyStatus != 0 ) {
            echo "ERROR"
            exit 1
          }
        }
      }
    }
    stage('Trivy scan for image vulnerabilities and show HIGH,CRITICAL') {
      steps {
        script {
          sh("docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:$TRIVY_VERSION --quiet image --no-progress --exit-code 0 --scanners vuln --severity HIGH,CRITICAL $IMAGE_NAME:$IMAGE_VERSION")
        }
      }
    }
    stage('Trivy scan for image vulnerabilities and exit on CRITICAL') {
      steps {
        script {
          sh '''
            set +x
            docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:$TRIVY_VERSION --quiet image --no-progress --exit-code 1 --scanners vuln --severity CRITICAL $IMAGE_NAME:$IMAGE_VERSION
          '''
        }
      }
    }
  }
}
