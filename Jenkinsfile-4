pipeline {
  agent {
    label 'linux'
  }
  environment {
    CONTAINER_IMAGE = 'darinpope/java-web-app:latest'
    TRIVY_VERSION='0.51.2'
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build container image') {
      steps {
        sh 'docker build -t $CONTAINER_IMAGE .'
      }
    }
    stage('Create Trivy Report') {
      steps {
        script {
          sh 'docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:$TRIVY_VERSION --quiet image --no-progress --exit-code 0 --severity MEDIUM,HIGH,CRITICAL $CONTAINER_IMAGE'
        }
      }
    }
    stage('Scan image with Trivy') {
      steps {
        script {
          sh 'docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:$TRIVY_VERSION --quiet image --no-progress --exit-code 1 --severity CRITICAL $CONTAINER_IMAGE'
        }
      }
    }
  }
}
