pipeline {
  agent {
    label 'linux'
  }
  environment {
    IMAGE = 'darinpope/java-web-app:latest'
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t $IMAGE .'
      }
    }
    stage('Report') {
      steps {
        sh 'docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:0.51.2 --quiet image --no-progress --exit-code 0 --severity MEDIUM,HIGH,CRITICAL $IMAGE'
      }
    }
    stage('Scan') {
      steps {
        sh 'docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/Library/Caches:/root/.cache/ aquasec/trivy:0.51.2 --quiet image --no-progress --exit-code 1 --severity CRITICAL $IMAGE'
      }
    }
  }
}
